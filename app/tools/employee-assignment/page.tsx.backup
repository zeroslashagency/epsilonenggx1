"use client"

import { useState, useEffect } from 'react'
import { ZohoLayout } from '@/app/components/zoho-ui/ZohoLayout'
import { getSupabaseBrowserClient } from '@/app/lib/services/supabase-client'
import { UserPlus, Clock, Check, X, Moon, Save, Calendar } from 'lucide-react'

interface Employee {
  id: string
  code: string
  name: string
  department: string
  role: string
  status: 'active' | 'on_leave' | 'inactive'
  currentAssignment?: {
    type: 'fixed' | 'rotation'
    shiftName: string
    timeRange: string
    color: string
    overnight?: boolean
    currentWeek?: number
  }
}

export default function EmployeeAssignmentPage() {
  const [searchQuery, setSearchQuery] = useState('')
  const [departmentFilter, setDepartmentFilter] = useState('all')
  const [roleFilter, setRoleFilter] = useState('all')
  const [statusFilter, setStatusFilter] = useState('all')
  const [shiftFilter, setShiftFilter] = useState('all')
  const [selectedEmployees, setSelectedEmployees] = useState<string[]>([])
  const [selectedEmployeeDetails, setSelectedEmployeeDetails] = useState<Employee | null>(null)
  const [showQuickActions, setShowQuickActions] = useState<string | null>(null)
  const [allEmployees, setAllEmployees] = useState<Employee[]>([])
  const [loading, setLoading] = useState(true)
  const [showAssignModal, setShowAssignModal] = useState(false)
  const [assignmentType, setAssignmentType] = useState<'single' | 'bulk'>('bulk')
  const [showScheduleModal, setShowScheduleModal] = useState(false)
  const [scheduleEmployee, setScheduleEmployee] = useState<Employee | null>(null)
  const supabase = getSupabaseBrowserClient()

  useEffect(() => {
    fetchEmployees()
  }, [])

  async function fetchEmployees() {
    try {
      setLoading(true)
      const { data: rawLogs, error } = await supabase
        .from('employee_master')
        .select('*')
        .order('employee_code')
      
      if (error) throw error

      const uniqueEmployees = new Map<string, Employee>()
      rawLogs?.forEach((emp: any) => {
        if (!uniqueEmployees.has(emp.employee_code)) {
          // Use whatever name field exists in the table
          const employeeName = emp.employee_name || emp.name || emp.full_name || emp.employee_code
          
          uniqueEmployees.set(emp.employee_code, {
            id: emp.employee_code.toLowerCase(),
            code: emp.employee_code,
            name: employeeName,
            department: emp.department || (emp.employee_code.startsWith('EE001') ? 'Admin' : 'Production'),
            role: emp.role || (emp.employee_code.startsWith('EE001') ? 'Admin' : 'Operator'),
            status: 'active'
          })
        }
      })

      setAllEmployees(Array.from(uniqueEmployees.values()))
    } catch (error) {
      console.error('Error:', error)
      setAllEmployees([])
    } finally {
      setLoading(false)
    }
  }

  const filteredEmployees = allEmployees.filter(emp => {
    const matchesSearch = emp.name.toLowerCase().includes(searchQuery.toLowerCase()) || 
                         emp.code.toLowerCase().includes(searchQuery.toLowerCase())
    const matchesDept = departmentFilter === 'all' || emp.department === departmentFilter
    const matchesRole = roleFilter === 'all' || emp.role === roleFilter
    const matchesStatus = statusFilter === 'all' || emp.status === statusFilter
    return matchesSearch && matchesDept && matchesRole && matchesStatus
  })

  const toggleEmployee = (id: string) => {
    setSelectedEmployees(prev => 
      prev.includes(id) ? prev.filter(e => e !== id) : [...prev, id]
    )
  }

  const toggleSelectAll = () => {
    if (selectedEmployees.length === filteredEmployees.length) {
      setSelectedEmployees([])
    } else {
      setSelectedEmployees(filteredEmployees.map(e => e.id))
    }
  }

  return (
    <ZohoLayout breadcrumbs={[{ label: 'Tools' }, { label: 'Employee Assignment' }]}>
      <div className="space-y-4">
        <div className="flex justify-between items-center">
          <div>
            <h1 className="text-2xl font-bold text-gray-900 dark:text-white">Employee Assignment Manager</h1>
            <p className="text-sm text-gray-600 dark:text-gray-400">Assign shifts to employees</p>
          </div>
          <button className="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
            <Save className="w-4 h-4 inline mr-2" />Save
          </button>
        </div>

        {loading ? (
          <div className="bg-white dark:bg-gray-900 rounded-lg border p-12 text-center">
            <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
            <p className="text-gray-600 dark:text-gray-400">Loading employees...</p>
          </div>
        ) : (
          <div className="bg-white dark:bg-gray-900 rounded-lg border">
            <div className="px-4 py-3 bg-gray-50 dark:bg-gray-800 border-b flex justify-between">
              <label className="flex items-center gap-2">
                <input type="checkbox" checked={selectedEmployees.length === filteredEmployees.length && filteredEmployees.length > 0} onChange={toggleSelectAll} className="w-4 h-4 rounded" />
                <span className="text-sm font-medium">Select All ({filteredEmployees.length})</span>
              </label>
            </div>
            <div className="divide-y max-h-[600px] overflow-y-auto">
              {filteredEmployees.map(emp => (
                <div key={emp.id} className="px-4 py-3 hover:bg-gray-50 dark:hover:bg-gray-800">
                  <div className="flex items-center gap-3">
                    <input type="checkbox" checked={selectedEmployees.includes(emp.id)} onChange={() => toggleEmployee(emp.id)} className="w-4 h-4 rounded" />
                    <div 
                      className="flex-1 cursor-pointer"
                      onClick={() => setSelectedEmployeeDetails(emp)}
                    >
                      <div className="font-medium text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">{emp.name} ({emp.code})</div>
                      <div className="text-sm text-gray-600 dark:text-gray-400">{emp.department} | {emp.role}</div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        {selectedEmployees.length > 0 && (
          <div className="fixed bottom-0 left-0 right-0 bg-white dark:bg-gray-900 border-t shadow-lg z-50 md:ml-[70px] lg:ml-[280px]">
            <div className="px-4 py-4 flex justify-between items-center">
              <span className="font-medium">{selectedEmployees.length} selected</span>
              <div className="flex gap-2">
                <button 
                  onClick={() => {
                    setAssignmentType('bulk')
                    setShowAssignModal(true)
                  }}
                  className="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700"
                >
                  Assign Shift
                </button>
                <button className="px-4 py-2 bg-purple-600 text-white rounded-lg text-sm hover:bg-purple-700">Assign Rotation</button>
              </div>
            </div>
          </div>
        )}

        {selectedEmployeeDetails && (
          <EmployeeDetailsModal
            employee={selectedEmployeeDetails}
            onClose={() => setSelectedEmployeeDetails(null)}
            onEditAssignment={() => {
              setAssignmentType('single')
              setShowAssignModal(true)
            }}
            onViewSchedule={() => {
              setScheduleEmployee(selectedEmployeeDetails)
              setShowScheduleModal(true)
              setSelectedEmployeeDetails(null)
            }}
          />
        )}

        {showAssignModal && (
          <AssignmentModal
            employees={assignmentType === 'bulk' 
              ? allEmployees.filter(e => selectedEmployees.includes(e.id))
              : selectedEmployeeDetails ? [selectedEmployeeDetails] : []
            }
            onClose={() => setShowAssignModal(false)}
            onSave={(shiftData) => {
              console.log('Saving assignment:', shiftData)
              setShowAssignModal(false)
              setSelectedEmployees([])
              fetchEmployees() // Refresh employee list
            }}
          />
        )}

        {showScheduleModal && scheduleEmployee && (
          <ScheduleViewModal
            employee={scheduleEmployee}
            onClose={() => {
              setShowScheduleModal(false)
              setScheduleEmployee(null)
            }}
          />
        )}
      </div>
    </ZohoLayout>
  )
}

function ScheduleViewModal({ employee, onClose }: { employee: Employee; onClose: () => void }) {
  const [schedule, setSchedule] = useState<any[]>([])
  const [attendance, setAttendance] = useState<any[]>([])
  const [loading, setLoading] = useState(true)
  const [dateRange, setDateRange] = useState<'week' | '2weeks' | '4weeks'>('2weeks')

  useEffect(() => {
    fetchScheduleAndAttendance()
  }, [dateRange])

  async function fetchScheduleAndAttendance() {
    try {
      setLoading(true)
      const today = new Date()
      const fromDate = new Date(today)
      fromDate.setDate(today.getDate() - today.getDay()) // Start of current week
      
      const toDate = new Date(fromDate)
      if (dateRange === 'week') {
        toDate.setDate(fromDate.getDate() + 6)
      } else if (dateRange === '2weeks') {
        toDate.setDate(fromDate.getDate() + 13)
      } else {
        toDate.setDate(fromDate.getDate() + 27)
      }

      const fromStr = fromDate.toISOString().split('T')[0]
      const toStr = toDate.toISOString().split('T')[0]

      const [scheduleRes, attendanceRes] = await Promise.all([
        fetch(`/api/schedule/employee?employee_code=${employee.code}&from=${fromStr}&to=${toStr}`),
        fetch(`/api/attendance/employee?employee_code=${employee.code}&from=${fromStr}&to=${toStr}`)
      ])

      const scheduleData = await scheduleRes.json()
      const attendanceData = await attendanceRes.json()

      if (scheduleData.success) {
        setSchedule(scheduleData.data.schedule || [])
      }
      if (attendanceData.success) {
        setAttendance(attendanceData.data.attendance || [])
      }
    } catch (error) {
      console.error('Error fetching schedule:', error)
    } finally {
      setLoading(false)
    }
  }

  const getAttendanceForDate = (date: string) => {
    return attendance.find(a => a.date === date)
  }

  const isLate = (shiftStart: string, firstIn: string, graceMinutes: number = 10) => {
    if (!firstIn) return false
    const [shiftH, shiftM] = shiftStart.split(':').map(Number)
    const shiftTime = new Date()
    shiftTime.setHours(shiftH, shiftM, 0)
    
    const checkInTime = new Date(`2000-01-01T${firstIn}`)
    const gracePeriod = graceMinutes * 60 * 1000
    
    return checkInTime.getTime() > (shiftTime.getTime() + gracePeriod)
  }

  return (
    <div className="fixed inset-0 bg-black/20 backdrop-blur-sm z-[100] flex items-center justify-center p-4" onClick={onClose}>
      <div 
        className="bg-white dark:bg-gray-900 rounded-xl shadow-2xl max-w-6xl w-full max-h-[90vh] overflow-y-auto border border-gray-200 dark:border-gray-700"
        onClick={(e) => e.stopPropagation()}
      >
        <div className="px-6 py-5 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-blue-600 via-purple-600 to-blue-700">
          <div className="flex items-center justify-between">
            <div className="flex items-center gap-4">
              <div className="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center">
                <span className="text-2xl font-bold text-white">
                  {employee.name.charAt(0).toUpperCase()}
                </span>
              </div>
              <div>
                <h2 className="text-xl font-bold text-white">
                  Schedule & Attendance
                </h2>
                <p className="text-blue-100">{employee.name} ‚Ä¢ {employee.code}</p>
              </div>
            </div>
            <div className="flex items-center gap-3">
              <select
                value={dateRange}
                onChange={(e) => setDateRange(e.target.value as any)}
                className="px-3 py-2 border border-white/20 rounded-lg bg-white/10 backdrop-blur-sm text-white text-sm placeholder-white/70"
              >
                <option value="week" className="text-gray-900">This Week</option>
                <option value="2weeks" className="text-gray-900">Next 2 Weeks</option>
                <option value="4weeks" className="text-gray-900">Next 4 Weeks</option>
              </select>
              <button onClick={onClose} className="p-2 hover:bg-white/20 rounded-lg transition-colors">
                <X className="w-5 h-5 text-white" />
              </button>
            </div>
          </div>
        </div>

        <div className="p-6">
          {loading ? (
            <div className="text-center py-12">
              <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
              <p className="text-gray-600 dark:text-gray-400">Loading schedule...</p>
            </div>
          ) : schedule.length === 0 ? (
            <div className="text-center py-16">
              <div className="relative mb-8">
                <div className="w-24 h-24 bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900/30 dark:to-purple-900/30 rounded-full mx-auto flex items-center justify-center">
                  <Calendar className="w-12 h-12 text-blue-500 dark:text-blue-400" />
                </div>
                <div className="absolute -top-2 -right-2 w-8 h-8 bg-yellow-100 dark:bg-yellow-900/30 rounded-full flex items-center justify-center">
                  <span className="text-yellow-600 dark:text-yellow-400 text-lg">‚ö†Ô∏è</span>
                </div>
              </div>
              <h3 className="text-xl font-semibold text-gray-900 dark:text-white mb-2">No Shift Assignment</h3>
              <p className="text-gray-600 dark:text-gray-400 mb-6 max-w-md mx-auto">
                This employee hasn't been assigned to any shift schedule yet. Use the "Edit Assignment" button to assign a shift.
              </p>
              <div className="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 max-w-md mx-auto">
                <p className="text-sm text-blue-800 dark:text-blue-200">
                  üí° <strong>Tip:</strong> You can assign fixed shifts or rotation patterns to employees for better scheduling.
                </p>
              </div>
            </div>
          ) : (
            <div className="space-y-3">
              {schedule.map((day: any) => {
                const dayAttendance = getAttendanceForDate(day.date)
                const late = dayAttendance && isLate(day.start_time, dayAttendance.first_in, day.grace_minutes)
                
                return (
                  <div 
                    key={day.date}
                    className="p-4 rounded-lg border-2 transition-all hover:shadow-md"
                    style={{ 
                      borderColor: day.color || '#3B82F6',
                      backgroundColor: `${day.color || '#3B82F6'}10`
                    }}
                  >
                    <div className="flex items-center justify-between">
                      <div className="flex-1">
                        <div className="flex items-center gap-3 mb-2">
                          <div className="font-semibold text-gray-900 dark:text-white">
                            {new Date(day.date + 'T00:00:00').toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' })}
                          </div>
                          <div 
                            className="px-3 py-1 rounded-full text-sm font-medium"
                            style={{ 
                              backgroundColor: day.color || '#3B82F6',
                              color: 'white'
                            }}
                          >
                            {day.shift_name}
                          </div>
                          {day.rotation_week && (
                            <span className="text-xs text-gray-600 dark:text-gray-400">Week {day.rotation_week}</span>
                          )}
                        </div>
                        <div className="flex items-center gap-4 text-sm text-gray-600 dark:text-gray-400">
                          <div className="flex items-center gap-1">
                            <Clock className="w-4 h-4" />
                            {day.start_time.slice(0,5)} - {day.end_time.slice(0,5)}
                          </div>
                          {day.overnight && (
                            <div className="flex items-center gap-1 text-blue-600 dark:text-blue-400">
                              <Moon className="w-4 h-4" />
                              Overnight
                            </div>
                          )}
                        </div>
                      </div>
                      <div className="text-right">
                        {dayAttendance ? (
                          <div>
                            <div className={`px-3 py-1 rounded-full text-sm font-medium ${
                              late 
                                ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'
                                : 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
                            }`}>
                              {late ? '‚ö†Ô∏è Late' : '‚úì On Time'}
                            </div>
                            <div className="text-xs text-gray-600 dark:text-gray-400 mt-1">
                              In: {dayAttendance.first_in?.slice(0,5) || 'N/A'}
                            </div>
                            <div className="text-xs text-gray-600 dark:text-gray-400">
                              Out: {dayAttendance.last_out?.slice(0,5) || 'N/A'}
                            </div>
                          </div>
                        ) : (
                          <div className="px-3 py-1 rounded-full text-sm bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-400">
                            No Attendance
                          </div>
                        )}
                      </div>
                    </div>
                  </div>
                )
              })}
            </div>
          )}
        </div>

        <div className="px-6 py-4 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 flex justify-between items-center">
          <div className="flex items-center gap-4 text-sm">
            <div className="flex items-center gap-2">
              <div className="w-3 h-3 rounded-full bg-green-500"></div>
              <span className="text-gray-600 dark:text-gray-400">On Time</span>
            </div>
            <div className="flex items-center gap-2">
              <div className="w-3 h-3 rounded-full bg-yellow-500"></div>
              <span className="text-gray-600 dark:text-gray-400">Late</span>
            </div>
            <div className="flex items-center gap-2">
              <div className="w-3 h-3 rounded-full bg-gray-400"></div>
              <span className="text-gray-600 dark:text-gray-400">No Attendance</span>
            </div>
          </div>
          <button
            onClick={onClose}
            className="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
          >
            Close
          </button>
        </div>
      </div>
    </div>
  )
}

